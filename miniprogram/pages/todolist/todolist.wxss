/* miniprogram/pages/todolist/todolist.wxss */
page {
  background-color: rgb(214, 243, 243);
}

.container {
  display: flex;
  flex-direction: column;
}

.addTaskView {
  width: 100%;
}

.newTaskInputText {
  margin-left: 10px;
  margin-right: 10px;
  background-color: white;
  margin-bottom: 5px;
  border: 1px solid #007aff;
  border-radius: 5px;
  font-size: 18px;
  width: 90%;
  min-height: 40px;
}

.addTaskButton {
  width: auto;
  height: 40px;
  font-size: 18px;
  background-color: rgb(187, 255, 119);
}

.boader {
  width: 100%;
  height: 10px;
}

.scrollViewClass {
  width: 90%;
}

.taskItemClass {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  margin: 5px;
  border-radius: 5px;
}

.checkbox {
  margin-left: 10px;
}

.taskText {
  width: 100%;
  line-height: 40px;
  font-size: 18px;
  color: black;
}

.finishedTaskText {
  width: 100%;
  line-height: 40px;
  font-size: 18px;
  color: gray;
}

.yiwanchengClass {
  height: auto;
  color: black;
  font-size: large;
}
